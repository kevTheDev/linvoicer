<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human %></h1>
</div>

<%= simple_form_for @invoice, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="form-inputs">
	  <%= f.input :month, :collection => MONTHS %>
    <%= f.input :year, :collection => years_for_select %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                invoices_path, :class => 'btn' %>
  </div>
<% end %>

